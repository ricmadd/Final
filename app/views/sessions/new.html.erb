<div class="page-header">
  <h1>Sign In</h1>
</div>

<form action="/authenticate" class="col-md-4">

  <div class="form-group">
    <label class="control-label">Enter your First Name:</label>
    <input name="firstname" type="text" class="form-control input-md" placeholder="Your first name">
  </div>

  <div class="form-group">
    <label>Enter a Password:</label>
    <input name="password" type="password" class="form-control input-md" placeholder="Enter Password here">
  </div>

  <button type="submit" class="btn btn-success btn-md">Sign In</button>
  or
  <%= link_to "Create a new Account", "/users/new" %>

</form>

